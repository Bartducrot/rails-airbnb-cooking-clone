    <div class="row">
      <% @user.transactions.each do |transaction|  %>
      <% recipe = Recipe.find(transaction.recipe_id)%>
        <%= link_to recipe_path(recipe) do%>
        <div class="col-xs-12 col-sm-6">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0) 30%, rgba(0,0,0,3)), url('<%= cl_image_path recipe.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="card-category"><i class="fa fa-clock-o" aria-hidden="true"></i>
          <%= recipe.cooking_time %> MINS</div>
          <div class="card-difficulty"><%= recipe.difficulty.upcase %> <i class="fa fa-cutlery" aria-hidden="true"></i></div>
          <div class="card-flexbox">
            <div class="text-center">
              <h2><%= recipe.title %></h2>
              <h3><%= recipe.price %> Â£</h3>
            </div>

            <div class="star-rating">
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
            </div>
          <% owner = User.find(recipe.user_id)  %>
          <% avatar_url = owner.facebook_picture_url || owner.photo.url(:square) || "http://placehold.it/30x30" %>
          <%= cl_image_tag avatar_url, class: "card-user avatar" %>
          </div>
          </div>
        </div>
        <% end %>
      <% end  %>


      <div class="col-xs-12 col-sm-6">
          <%= link_to recipes_path, class: "card add-card btn" do%>
            <h3>Buy another recipe</h3>
          <% end %>
      </div>
    </div>
