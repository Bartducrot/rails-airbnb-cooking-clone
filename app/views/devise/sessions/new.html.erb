<div class="form-wrapper">
  <div class="form-container">
    <h2>HUBERT</h2>
    <h3>Welcome back</h3>
    <p><em>Nice to see you again!</em></p>

    <div class="black-form">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider) do %>
            <button class="facebook"><span class="y-icon" data-icon="f"></span><span>Connect with Facebook</span></button>
          <% end %>
        <% end -%>
      <% end -%>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
       <% end %>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
  </div>
      <p id="terms">By clicking connect, you agree to our Terms of Service and Privacy Policy</p>
</div>
