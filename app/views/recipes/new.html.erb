<h1>Create a new recipe</h1>
<%= simple_form_for @recipe do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, :hint => "give us a price" %>
  <%= f.input :cooking_time, :hint => "prices should be in USD" %>
  <%= f.input :description, :hint => "tell us where its from" %>
  <%= f.input :difficulty %>
  <%= f.input :cuisine_type %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Home", recipes_path %>
