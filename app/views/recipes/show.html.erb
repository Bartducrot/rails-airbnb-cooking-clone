<p>Please find me at views/recipes/show.html.erb</p>

<h1><%= @recipe.title %> - <%= @recipe.transactions.count %></h1>
<p><%= @recipe.description %></p>

<%= link_to "delete this recipe", recipe_path(@recipe), method: :delete %>
<%= link_to "home page", recipes_path %>

<% if (@recipe.user_id != current_user.id) || Transaction.find_by_user_id(current_user.id).is_a? NilClass   %>
  <%= render 'transactions/form', recipe: @recipe, transaction: @transaction %>
<% else %>
  <p> <%= @recipe.instructions %> </p>
<% end %>
