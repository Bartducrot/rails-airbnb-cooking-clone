<div class="container">
  <div class="row">
    <% @recipes.each do |recipe|%>
      <div class="col-xs-12 col-sm-6">
         <%= render "shared/card", recipe: recipe %>
      </div>
    <% end %>
  </div>
</div>

<% if @recipes.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>
