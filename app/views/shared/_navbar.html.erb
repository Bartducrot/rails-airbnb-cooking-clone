<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "HUBERT", recipes_path, class: "navbar-wagon-brand" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Search form -->


    <%= form_tag(recipes_path, :method => "get", id: "search-form", class: "navbar-wagon-search") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
        <%= submit_tag "Search", :name => nil, class: "navbar-wagon-search-btn" %>
    <% end %>

    <!-- Profile picture and dropdown -->
    <% if user_signed_in? %>
      <%= link_to "My Cookbook", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Create Recipe", new_recipe_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete%></li>
          </ul>
        </div>
      </div>
    <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>
